FROM eclipse-temurin:11-jre
RUN mkdir /opt/app
RUN mkdir /out
RUN mkdir /in
COPY --from=eu.gcr.io/hmf-build/ops-resources-dev:0.3 /data/resources/public/patient_report_images /data/resources/patient_report_images
COPY --from=eu.gcr.io/hmf-build/ops-resources-dev:0.3 /data/resources/public/germline_reporting /data/resources/germline_reporting
COPY ./target/patient-reporter-jar-with-dependencies.jar /opt/app/patient-reporter.jar
COPY ./run-docker.properties /opt/app/patient-reporter.properties
ENTRYPOINT ["java", "-jar", "/opt/app/patient-reporter.jar", "-properties_file", "/opt/app/patient-reporter.properties"]